<head>
    <link rel="stylesheet" href="/css/openP.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
    <img class="image" src="{{ride.image}}" alt="{{ride.title}}">
    <h1 class="rideT">{{ride.title}}</h1>
    <h4 class="leaveComment">Leave a comment on your experience.</h4>
    <form id="new-post-form" class="card-body">
        <label class="form-label" for="post-title" >Title</label>
        <input type="text" name="post-title" id="title"  placeholder="Title" />
        </br>
        </br>
        <label class="form-label2" for="description-body" id="comment">Comment</label>
        <textarea name="post-body" class="form-input" placeholder="Leave a Comment"></textarea>
        <button type="submit" class="btn">Post</button>
    </form>

    <h4 class="previous">Previous Comments</h4>
        <ul>
            {{#each posts as |post|}}
                <li class="list1">{{this.title}}</li>
                <li class="list2">{{post.description}}</li>
            {{/each}}
        </ul>
{{!-- This passes info through --}}
<h3 id="ride_id">{{ride.id}}</h3>
<h5 id="land_id">{{ride.land_id}}</h5>
<script src="/js/post.js"></script>
